<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csform.android.uiapptemplate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.csform.android.uiapptemplate.MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.csform.android.uiapptemplate.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.csform.android.uiapptemplate.ParallaxKenBurnsActivity"
            android:theme="@style/AppTheme.Overlay" />
        <activity android:name="com.csform.android.uiapptemplate.ParallaxActivity" />
        <activity
            android:name="com.csform.android.uiapptemplate.ImageGalleryCategoryActivity"
            android:theme="@style/AppTheme.NoShadow" />
        <activity
            android:name="com.csform.android.uiapptemplate.ImageGallerySubcategoryActivity"
            android:theme="@style/AppTheme.NoShadow" />
        <activity android:name="com.csform.android.uiapptemplate.LogInPageActivity" />
        <activity android:name="com.csform.android.uiapptemplate.SplashScreensActivity" />
        <activity android:name="com.csform.android.uiapptemplate.ListViewsActivity" />
        <activity
            android:name="com.csform.android.uiapptemplate.LeftMenusActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.csform.android.uiapptemplate.SearchBarsActivity" />
        <activity android:name="com.csform.android.uiapptemplate.GoogleCardsActivity" />
        <activity android:name="com.csform.android.uiapptemplate.ExpandableListViewActivity" />
        <activity android:name="com.csform.android.uiapptemplate.StickyListHeadersActivity" />
    </application>

</manifest>